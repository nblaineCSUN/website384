server {
    listen 80;
    server_name localhost;

    # Static files (Flask won't see these; Nginx serves them directly)
    location /static/ {
        alias /mnt/c/Users/nblai/Downloads/cit384-laptop/website/static/;
        expires 7d;
        add_header Cache-Control "public";
    }

    # Your plain HTML pages folder
    location /pages/ {
        alias /mnt/c/Users/nblai/Downloads/cit384-laptop/website/pages/;
        # (Optional) default file for /pages/
        index index.html;
    }

    # Your top-level scripts folder (since it's outside /static)
    location /scripts/ {
        alias /mnt/c/Users/nblai/Downloads/cit384-laptop/website/scripts/;
        expires 7d;
        add_header Cache-Control "public";
    }

    # (Optional) serve /favicon.ico or /robots.txt if present at project root
    location = /favicon.ico { try_files $uri =204; }
    location = /robots.txt  { try_files $uri =404; }

    # Everything else â†’ Flask via Gunicorn (Unix socket)
    location / {
        include proxy_params;
        proxy_pass http://unix:/tmp/fruit.sock;
        proxy_read_timeout 60s;
    }
}
